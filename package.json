{
  "name": "babylon-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "db:reset": "yarn run migrate:rollback && yarn run migrate:latest && yarn run seed",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"cyan.bold,yellow.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/db/knexfile.ts",
    "migrate:make": "knex migrate:make --knexfile ./src/db/knexfile.ts -x ts",
    "migrate:latest": "knex migrate:latest --knexfile ./src/db/knexfile.ts",
    "seed": "knex seed:run --knexfile ./src/db/knexfile.ts",
    "seed:make": "knex seed:make --knexfile ./src/db/knexfile.ts -x ts",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "devDependencies": {
    "@types/async": "^3.2.0",
    "@types/bcrypt": "^3.0.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/morgan": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "async": "^3.2.0",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.13",
    "morgan": "^1.10.0",
    "objection": "^2.1.3",
    "pg": "^8.0.2"
  }
}
